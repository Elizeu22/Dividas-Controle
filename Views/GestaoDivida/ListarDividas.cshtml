@model IEnumerable<ConrtroleDividas.Models.Dividas>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link rel="stylesheet" href="~/css/Web.css" />


    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!--Awesome Icons-->>
    <script src="https://kit.fontawesome.com/a89251772b.js"></script>


    <title>ListarDividas</title>
</head>
<body>


    <div class="header">
        <h2>Listar Dividas</h2>
    </div>
  


    <div class="sidenav">





        <a href="@Url.Action("CadastrarDivida", "GestaoDivida")">
            <i style='font-size:100px' class="far fa-address-book"></i>

        </a>

        <a href="@Url.Action("ListarDividas", "GestaoDivida")">
            <i style='font-size:100px' class="fas fa-list"></i>

        </a>

        <a href="@Url.Action("DetalheDivida", "GestaoDivida")">
            <i style='font-size:100px' class="fas fa-wallet"></i>

        </a>

    </div>


           
                <div class="content01">
                    <table id="Dividas">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nome)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ValorProduto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.QtdeProduto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DescricaoProduto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ValorDivida)
                                   
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ValorProduto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.QtdeProduto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DescricaoProduto)
                                    </td>
                                    <td>
                                      
                                        @Html.DisplayFor(modelItem => item.ValorDivida)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Atualizar", "AtualizarDivida", new { id = item.id }) |

                                        @Html.ActionLink("Excluir", "ExcluirDivida", new { id = item.id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
      


</body>
</html>
